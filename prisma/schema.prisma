// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./banco.db" // ou ajuste o caminho conforme o local do seu .db
}

model Evento {
  id          Int            @id @default(autoincrement())
  nome        String
  data        String
  hora_inicio String
  hora_fim    String
  local       String
  capacidade  Int
  participantes Participante[]
  checkins    Checkin[]
}

model Participante {
  id          Int      @id @default(autoincrement())
  nome        String
  email       String
  telefone    String
  evento_id   Int
  evento      Evento   @relation(fields: [evento_id], references: [id])
  checkins    Checkin[]
}

model Checkin {
  id              Int      @id @default(autoincrement())
  participante_id Int
  evento_id       Int
  hora_entrada    String
  hora_saida      String?
  status          String

  participante Participante @relation(fields: [participante_id], references: [id])
  evento       Evento       @relation(fields: [evento_id], references: [id])
}
